datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String
  name     String?
  products Product[]
}

model Product {
  id          Int    @id @default(autoincrement())
  title       String
  description String
  price       Float
  userId      Int
  user        User   @relation(fields: [userId], references: [id])
}
